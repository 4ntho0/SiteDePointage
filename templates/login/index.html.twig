{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
    {% endblock %}

    <div class="page-auth">
        <div class="card-auth">
            <h2>Connexion</h2>

            {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="login-form">
                <input type="text" name="_username" placeholder="Login" value="{{ last_username }}" required autofocus class="form-input">

                <div class="password-wrapper">
                    <input type="password" name="_password" class="password-field" placeholder="Mot de passe">
                    <button type="button" class="toggle-password">
                        <em class="bi bi-eye-slash"></em>
                    </button>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="form-submit">Se connecter</button>
            </form>
        </div>
    </div>

    <script>
        // Toggle password
        const toggleBtn = document.querySelector('.toggle-password');
        const passwordField = document.querySelector('.password-field');

        toggleBtn.addEventListener('click', () => {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            toggleBtn.innerHTML = type === 'password' ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
        });
    </script>
{% endblock %}

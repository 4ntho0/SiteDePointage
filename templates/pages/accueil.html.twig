{% extends 'base.html.twig' %}

{% block title %}Pointage{% endblock %}

{% block body %}

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #0d001c, #1e1e1e);
        }

        .page-pointage {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-pointage {
            background: #ffffff;
            padding: 40px;
            width: 380px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .card-pointage h2 {
            margin-bottom: 15px;
        }

        .user {
            font-weight: bold;
            font-size: 18px;
        }

        .date {
            color: #777;
            margin-bottom: 20px;
        }

        .heure {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .info-embauche {
            font-size: 16px;
            color: #333;
            margin-bottom: 15px;
        }

        .info-duree {
            font-size: 16px;
            color: #333;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .actions {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .btn {
            flex: 1;
            padding: 15px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: not-allowed;
            color: white;
        }

        .btn-entree {
            background-color: #28a745;
        }

        .btn-sortie {
            background-color: #dc3545;
        }

        .btn-pause {
            background-color: #f0ad4e;
            cursor: pointer;
        }

        .info {
            font-size: 13px;
            color: #555;
        }
    </style>

    <div class="page-pointage">
        <div class="card-pointage">
            <h2>Pointage</h2>

            <p class="user">Anthony M</p>
            <p class="date" id="date">00/00/0000</p>

            <div class="heure" id="heure">00:00:00</div>

            {% if hasEntree %}
                <p class="info-embauche">Heure d'embauche : {{ heureEntree }}</p>
                <p class="info-duree" id="duree">Durée : 00:00:00</p>
            {% endif %}

            <div class="actions">

                {% if not hasEntree %}
                    <form method="post" style="flex:1">
                        <input type="hidden" name="type" value="entrée">
                        <button class="btn btn-entree">Entrée</button>
                    </form>
                {% endif %}

                {% if hasEntree and not pauseTerminee %}
                    {% if not enPause %}
                        <form method="post" style="flex:1">
                            <input type="hidden" name="type" value="pause">
                            <button class="btn btn-pause">Pause</button>
                        </form>
                    {% else %}
                        <form method="post" style="flex:1">
                            <input type="hidden" name="type" value="reprise">
                            <button class="btn btn-pause">Reprendre</button>
                        </form>
                    {% endif %}
                {% endif %}

                {% if hasEntree and not enPause %}
                    <form method="post" style="flex:1">
                        <input type="hidden" name="type" value="sortie">
                        <button class="btn btn-sortie">Sortie</button>
                    </form>
                {% endif %}

            </div>


            <p class="info">
                Veuillez pointer à votre arrivée et à votre départ.
            </p>
        </div>
    </div>

    <script>
        function updateDate() {
            const now = new Date();

            // Options pour formater la date en français
            const options = {weekday: 'long', day: 'numeric', month: 'long', year: 'numeric'};

            // toLocaleDateString avec 'fr-FR' pour le français
            const dateString = now.toLocaleDateString('fr-FR', options);

            // Met à jour le contenu du <p>
            document.getElementById('date').innerText = dateString.charAt(0).toUpperCase() + dateString.slice(1);
        }

        // Mise à jour immédiate
        updateDate();

        function updateTime() {
            const now = new Date();
            document.getElementById("heure").innerText =
                    now.toLocaleTimeString();
        }
        setInterval(updateTime, 1000);
        updateTime();

        {% if hasEntree %}

            const heureEntree = "{{ heureEntree }}";
            const heureDebutPause = "{{ heureDebutPause ?? '' }}";
            const heureFinPause = "{{ heureFinPause ?? '' }}";
            const enPause = {{ enPause ? 'true' : 'false' }};
                    const dureeElement = document.getElementById('duree');

            function parseTimeToDate(time) {
                if (!time)
                    return null;
                const [h, m, s] = time.split(':').map(Number);
                const d = new Date();
                d.setHours(h, m, s, 0);
                return d;
            }

            const debut = parseTimeToDate(heureEntree);
            const debutPause = parseTimeToDate(heureDebutPause);
            const finPause = parseTimeToDate(heureFinPause);

            function updateDuree() {
                let now = new Date();

                let diff = now - debut;

                // Pause terminée
                if (debutPause && finPause) {
                    diff -= (finPause - debutPause);
                }

                // Pause en cours → figer le timer
                if (enPause && debutPause) {
                    diff = debutPause - debut;
                }

                if (diff < 0)
                    diff = 0;

                const heures = Math.floor(diff / 3600000);
                const minutes = Math.floor((diff % 3600000) / 60000);
                const secondes = Math.floor((diff % 60000) / 1000);

                dureeElement.innerText =
                        "Durée : " +
                        String(heures).padStart(2, '0') + ":" +
                        String(minutes).padStart(2, '0') + ":" +
                        String(secondes).padStart(2, '0');
            }

            setInterval(updateDuree, 1000);
            updateDuree();

        {% endif %}




    </script>

{% endblock %}
